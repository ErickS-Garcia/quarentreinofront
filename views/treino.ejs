<div class="container">
  <div class="text-center p-3">
    <h1><%= locals.treino.nome %></h1>

    <h6 class="text-muted"><%= `Por: ${locals.treino.professor.nome} ${locals.treino.professor.sobrenome}` %></h6>
  </div>
  <div class="row">
    <div class="col-12">
      <h2>Aluno: <%= `${locals.treino.aluno.nome} ${locals.treino.aluno.sobrenome}` %></h2>

      <% locals.treino.conteudo.forEach(exercicio => { %>

      <div class="card mt-3">
        <div class="card-header"><%= exercicio.nome %></div>
        <div class="card-body">
          <h5 class="card-title"><%= exercicio.descricao %></h5>
          <p class="card-text"><%= exercicio.observacoes %></p>
        </div>
      </div>

      <% }); %>
    </div>
  </div>
</div>
